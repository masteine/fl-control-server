{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "src",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "./build",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@components/*": ["components/*"],
      "@server/*": ["server/*"],
      "@database/*": ["database/*"],
      "@middlewares/*": ["middlewares/*"],
      "@configuration/*": ["configuration/*"],
      "@utils/*": ["utils/*"]
    },

  },
  "include": ["src"],
  "lib": ["es2015"],
  "exclude": [
    "node_modules"
  ],    
  "typeRoots": [
    "./types", 
    "./node_modules/@types"
  ],
  "files":["./src/types/types.d.ts"]
}